<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    
    <modelVersion>4.0.0</modelVersion>
    
    <groupId>com.riskmetrics.sapon</groupId>
    <artifactId>sapon-mar-maven-plugin</artifactId>
    <packaging>maven-plugin</packaging>
    <name>Sapon MAR Maven Plugin</name>
    <version>1.0.0</version>
    <description>Sapon's Maven 2 plugin for creating Axis 2 module archives.</description>
    
    <dependencies>
        <dependency>
            <groupId>org.apache.maven</groupId>
            <artifactId>maven-plugin-api</artifactId>
            <version>2.0</version>
        </dependency>

        <!-- 
             Apparently maven automagically pretends you depend on plexus-utils 
             1.1 if you don't explicitly say which version you want.  
             Transitive deps don't override this, so we don't pick it up from 
             maven-archiver.  Therefore, we directly specify maven-archiver's 
             needed version of plexus-utils.  Remember to keep this in sync.  
             
             http://www.mail-archive.com/dev@maven.apache.org/msg81037.html   
        -->
        <dependency>
            <groupId>org.apache.maven</groupId>
            <artifactId>maven-archiver</artifactId>
            <version>2.4</version>
        </dependency>
        <dependency>
            <groupId>org.codehaus.plexus</groupId>
            <artifactId>plexus-utils</artifactId>
            <version>1.4.9</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
